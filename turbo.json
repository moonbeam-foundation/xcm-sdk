{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "outputs": ["build/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "outputs": ["build/**"],
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "link": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": ["src/**/*.snap", "test/**/*.snap"]
    },
    "test:watch": {
      "cache": false,
      "outputs": ["src/**/*.snap", "test/**/*.snap"]
    },
    "test:update": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"],
      "outputs": ["src/**/*.snap", "test/**/*.snap"]
    },
    "test:acc": {
      "dependsOn": ["^build"],
      "outputs": ["src/**/*.snap", "test/**/*.snap"]
    },
    "test:ci": {
      "cache": false
    }
  }
}
