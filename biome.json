{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "files": {
    "includes": ["**/*"],
    "experimentalScannerIgnores": [
      ".turbo/**/*",
      ".vscode/extensions.json",
      "build",
      "dist",
      "node_modules",
      "out",
      "target",
      "mkdocs/site"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "includes": ["*.test.ts", "**/*.test.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["mkdocs/**/*.css"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["**/build/**/*"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
